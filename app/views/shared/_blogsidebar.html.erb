<div class="col-sm-3 col-sm-offset-1 blog-sidebar">
      
  <div class="sidebar-module">
    <h4>Tags</h4>
    
      <% tag_order Tag.counts do |tag, count| %>
        
          
        <div><%= link_to tag.name, tag_path(tag.name) %> <%= count %></div>
          
        
      <% end %>
  </div> <!-- sidebar-module -->
</div> <!-- blog-sidebar -->