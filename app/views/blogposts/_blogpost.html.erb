<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= blogpost.title %>
</p>

<p>
  <strong>Date:</strong>
  <%= blogpost.created_at %>
</p>

<article>
    <p>
      <strong>Body:</strong>
      <%= markdown(blogpost.body) %>
    </p>

</article>

<% if logged_in? %>
  <%= link_to 'Edit', edit_blogpost_path(blogpost) %> |
  <%= link_to 'Back', blogposts_path %>
<% end %>