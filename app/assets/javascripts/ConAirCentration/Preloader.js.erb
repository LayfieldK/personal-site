
Concentration.Preloader = function (game) {

	this.background = null;
	this.preloadBar = null;

	this.ready = false;

};

Concentration.Preloader.prototype = {

	preload: function () {
		this.load.image('bg','<%= asset_path('ConAirCentration/explosions.jpg') %>');
		this.load.image('playButton', '<%= asset_path('ConAirCentration/play.png') %>');
		this.load.image('retryButton', '<%= asset_path('ConAirCentration/retry.png') %>');
		this.load.atlas('animals', '<%= asset_path('ConAirCentration/all.png') %>', '<%= asset_path('ConAirCentration/all.json') %>');

	},

	create: function () {

		//	Once the load has finished we disable the crop because we're going to sit in the update loop for a short while as the music decodes
		this.state.start("MainMenu");
	},

	update: function () {


	}

};
